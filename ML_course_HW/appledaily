<script>
    if ((GeoDFP['CC'] != 'TW')&&(GeoDFP['CC'] != 'HK')&&(GeoDFP['CC'] != '')) {
        $('#googletranslate').show();
    }
</script>
<script type="text/javascript">
$(document).ready(function(){
    var country=($.cookie('country'))?$.cookie('country'):'';
    var date = new Date();
    var minutes = 60;
    date.setTime(date.getTime() + (minutes * 60 * 1000));
    if(country==''){ 
        $.cookie('country',  GeoDFP['CC'] ,{expires: date, path: '/'  , domain: 'appledaily.com' }); 
        $.cookie('country',  GeoDFP['CC'] ,{expires: date, path: '/'  , domain: 'appledaily.com.tw' }); 
        country=$.cookie('country');
    }
    var link='https://tw.news.appledaily.com/us/realtime';
    if((country=='US')||(country=='CA')){ 
      $('.UsOnly').show(); 
      $('.TwOnly').hide();       
      $('.UsLink').attr('href',link);
    }
    else
    {
      $('.TwOnly').show();   
      $('.UsOnly').hide();
    }    
});
</script>	

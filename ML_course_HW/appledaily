    <script>
        $(document).ready(function() {
            $('.ndgNav_Outbox .ndgTag').each(function(i) {
                var _i = i;
                $(this).mouseenter(function() {
                  $('.ndgTag').children('.ndgMore').hide().eq(_i).show();
                  $(this).addClass('ndgScrolldownHover');
                });
                $(this).mouseleave(function() {
                  $('.ndgTag').children('.ndgMore').hide();
                  $(this).removeClass('ndgScrolldownHover');
                });
            });

            var topFixedheight = $('.ndgNavfixed').outerHeight();
            var floatNav_offset = $('#ndgNav_toggleBurger').offset();
            var windowheight = $(window).height();

            $('.ndgFixedtop').css({'height': topFixedheight + 'px'});
            $('.ndArticle_shareOutbox').css({'top': topFixedheight + 'px'});
            $('#ndgNav_floatBoard').css({'height': windowheight - floatNav_offset.top + 'px'});

            $("#ndgNav_toggleBurger").click(function(){						

                if ($("#ndgNav_floatBoard").is(':visible')){
                    $("#ndgNav_floatBoard").css({'display':'none'});
                }
                else if (!$("#ndgNav_floatBoard").is(':visible')){
                    $("#ndgNav_floatBoard").css({'display':'block'});
                }
            });

            /*$('#ndgNav_floatBoard .ndgNav_floatTab > div').each(function(i) {
                var _li = i;
                $(this).click(function() {
                  $('#ndgNav_floatBoard').children('.ndgNav_floatList').hide().eq(_li).show();
                  $('#ndgNav_floatBoard .ndgNav_floatTab > div').removeClass('current').eq(_li).addClass('current');
                });
            });*/

            $('#ndgNav_floatBoard .ndgNav_floatLink').each(function(i) {
                var _fli = i;
                $(this).click(function(e) {
                    if (!$('.ndgFloatmore').is(':visible')){
                        $('.ndgFloatmore').hide().eq(_fli).slideDown();
                        $('.arrowDownfloat').show().eq(_fli).hide();
                        $('.arrowUpfloat').hide().eq(_fli).show();
                    }
                    else if ($('.ndgFloatmore').is(':visible')) {
                        $('.ndgFloatmore').slideUp();
                        $('.arrowDownfloat').show();
                        $('.arrowUpfloat').hide();
                    }
                });
            });

            $('body').on( "mouseup touchstart", function (e){
                var container = $("#ndgNav_floatBoard");
                var togglebotton = $('#ndgNav_toggleBurger');
                var navCon = $(".ndgMore");
                navCon.hide();
                if (!togglebotton.is(e.target) && container.has(e.target).length === 0){
                    container.fadeOut();
                }	
            }); 
      });
    </script>
